<?xml version="1.0" encoding="utf-8"?>
 
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@drawable/mm_listitem"
            
             >
            
            <ImageView
                android:id="@+id/session_head"
                android:layout_width="55dp"
		        android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/session_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/session_head"
                android:padding="7dp"
                android:text="小黑"
                android:textColor="#000" />
            <TextView
                android:id="@+id/session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="7dp"
                android:text="昨天 晚上"
                android:textColor="#666" />
             <TextView
                 android:id="@+id/session_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/session_head"
                android:layout_alignParentBottom="true"
                android:padding="7dp"
                android:text="尼滚...."
                android:textColor="#666" />

            <ImageView
                android:id="@+id/session_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/session_time"
                android:paddingRight="10dp"
                android:src="@drawable/red_dot_middle_2x"
                android:gravity="center"
                android:textColor="#ffffff"
              />
            
        </RelativeLayout>
 